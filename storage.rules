rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // For new submissions from scout mode before a memorial ID exists
    match /memorials/pending/{allPaths=**} {
      allow write: if request.auth != null;
    }

    // For all files within a specific memorial's folder
    match /memorials/{memorialId}/{allPaths=**} {
      // Allow anyone to read files.
      allow read;

      // Allow the curator to write (upload, update, delete) files.
      allow write: if request.auth != null && request.resource.metadata.curatorId == request.auth.uid;
    }

    // For transcription uploads
    match /transcriptions/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}