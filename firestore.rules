rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Optional: mark admins in /users/{uid}.isAdmin == true
    function isAdmin() {
      return isSignedIn() &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Curator if they're listed on the doc (support legacy field + array)
    function isCurator() {
      return isSignedIn() && (
        resource.data.curatorId == request.auth.uid ||
        (resource.data.curatorIds != null && request.auth.uid in resource.data.curatorIds)
      );
    }

    // Treat approved == published for public viewing
    function isPublicMemorial() {
      return resource.data.status == 'approved' || resource.data.status == 'published';
    }

    /* -------- memorials -------- */
    match /memorials/{memorialId} {
      // World-readable if approved/published; curators/admins always allowed
      allow read: if isPublicMemorial() || isCurator() || isAdmin();

      // Anyone signed in can create; edits limited to curator/admin
      allow create: if isSignedIn();
      allow update, delete: if isCurator() || isAdmin();

      /* ----- tributes subcollection ----- */
      match /tributes/{tributeId} {
        // Public can read only approved tributes on a public memorial
        allow read: if (isPublicMemorial() && resource.data.status == 'approved') || isCurator() || isAdmin();

        // Allow anyone to submit a tribute (pending moderation)
        allow create: if true;

        // Only curator/admin can approve/reject/delete
        allow update, delete: if isCurator() || isAdmin();
      }

      /* (add other subcollections here with similar patterns if needed) */
    }

    /* -------- users -------- */
    match /users/{uid} {
      // Users can read/write their own profile; admins can manage
      allow read, write: if (isSignedIn() && request.auth.uid == uid) || isAdmin();
    }

    /* -------- default deny -------- */
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
